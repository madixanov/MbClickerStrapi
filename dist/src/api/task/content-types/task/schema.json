{
    "kind": "collectionType",
    "collectionName": "tasks",
    "info": {
        "singularName": "task",
        "pluralName": "tasks",
        "displayName": "task"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "Name": {
            "type": "string",
            "default": "Text",
            "required": true,
            "unique": true,
            "regex": "^[A-Za-zА-Яа-яЁё0-9\\s]+$"
        },
        "Prize": {
            "type": "integer",
            "required": true,
            "default": 0
        },
        "Goal": {
            "type": "integer",
            "required": false,
            "default": 0
        },
        "Completed": {
            "type": "boolean",
            "required": true,
            "default": false
        },
        "isTemplate": {
            "type": "boolean",
            "required": true,
            "default": true
        },
        "player": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::player.player",
            "inversedBy": "tasks"
        }
    }
}
