{
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment",
    "description": "Платежи пользователей"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "telegram_id": {
      "type": "biginteger",
      "required": true
    },
    "type": {
      "type": "integer",
      "required": true
    },
    "amount": {
      "type": "string",
      "required": true
    },
    "months": {
      "type": "integer",
      "required": true
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "pending"
    },
    "paymentId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "confirmationUrl": {
      "type": "string",
      "required": true
    }
  }
}
